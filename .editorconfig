root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.{c,cc,cpp,h,hh,hpp,inl,glsl}]
indent_style = space
indent_size = 2

[*.{cmake,txt}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[.travis.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
